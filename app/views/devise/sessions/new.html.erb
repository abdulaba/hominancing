<div style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path 'homi-1.jpg' %>'); height: 85vh; background-size: cover; background-position: center;">
  <div class="container pt-5">
    <div class="form-difuse col-lg-6 col-md-8 col-sm-12 m-auto p-4">
      <h2>Iniciar sesión</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs p-4">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Iniciar Sesión", class: "btn btn-primary btn-sm rounded-pill w-50 mt-2" %>
        </div>
      <% end %>


      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
