<div class="container">
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= link_to plan_path(plan), class: "text-decoration-none" do %>
        <div class="card plan-card" style="background-color: <%= plan.color %>;">
          <div class="card-body d-flex flex-column">
            <div class="d-flex align-items-center">
              <i class="fa-solid fa-piggy-bank fs-3 me-2"></i>
              <div class="d-flex flex-column">
                <div>
                  <div><%= plan.title %></div>
                  <div><%= plan.goal %></div>
                </div>
              </div>
            </div>
            <div class="d-flex justify-content-end mt-2">
              <small>Fecha de meta: <%= plan.date.strftime('%Y-%m-%d') if plan.date.present? %></small>
            </div>
            <div class="plan-card progress mt-2" style="width: 100%; height: 10px;">
              <div class="progress-bar rounded" role="progressbar" style="width: <%= progress_percentage %>%; max-width: 100%;" aria-valuenow="<%= progress_percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
