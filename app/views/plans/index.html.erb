<div class="container mt-5">
  <button type="button" class="button-fixed bg-success" data-bs-toggle="modal" data-bs-target="#form" data-render-more-target="openModal" data-controller="render-more" data-render-more-open-value="<%= @form_err %>">
    +
  </button>

  <div class="row justify-content-center">
    <% @plans.each do |plan| %>
      <div class="col-sm-12 mb-3">
        <%= render "plan_card", plan: plan %>
      </div>
    <% end %>
  </div>

<div class="modal fade" id="form" tabindex="-1" aria-labelledby="fixedFormLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title">Nuevo pago programado</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'form', plan: @plan, colors: @colors %>
      </div>
    </div>
  </div>
</div>
</div>
