<%= simple_form_for(@plan) do |f| %>
  <%= f.input :title %>
  <%= f.input :goal %>
  <%= f.input :color, as: :color, input_html: { list: "options" } %>
  <datalist id="options">
    <% @colors.each do |color| %>
      <option value="<%= color %>"><%= color %></option>
    <% end %>
  </datalist>
  <%= f.input :date, as: :date %>
  <%= f.submit class: "btn btn-primary w-100" %>
<% end %>
