<div class = "d-flex justify-content-between align-items-center shadow-sm p-1 mb-4" data-bs-toggle="modal" data-bs-target="#myModal<%= record.id %>">
  <div class="d-flex align-items-center">
    <%= render "shared/category_icon", category: record.category %>
    <span class="mx-3 account-pill" style="background-color: <%= record.account.color %>;"> <%= record.account.name %> </span>
  </div>
  <div class="d-flex align-items-center">
    <p class="p-0 my-0"> USD <%= record.amount %> </p>
    <i class="mx-3 fa-solid fa-arrow-right-arrow-left"></i>
    <p class="p-0 my-0"> Bs.D <%= record.amount * 36 %> </p>
    <i class="mx-3 fa-solid fa-arrow-trend-<%= record.income ? "up text-success" : "down text-danger" %>"></i>
  </div>
</div>
