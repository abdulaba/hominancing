<%= link_to fixed_path(fixed), class: "text-decoration-none text-dark" do %>
  <div class="shadow-sm p-2 mb-3">
    <div class = "d-flex align-items-center justify-content-between">
      <div>
        <%= fixed.title %>
        <div>
          <%= render "shared/category_icon", category: fixed.category %>
          <span class="mx-3 account-pill" style="background-color: <%= fixed.account.color %>;"> <%= fixed.account.name %> </span>
        </div>
      </div>
      <div>
        <span class = "text-secondary"><%= fixed.periodicity_to_s %></span>
      </div>
      <div class="d-flex align-items-center">
        <div>
          <span><%= fixed.amount %></span>
          <i class="mx-3 fa-solid fa-arrow-trend-<%= fixed.income ? "up text-success" : "down text-danger" %>"></i>
          <div>
            <%= fixed.next_pay == DateTime.now.to_date ? "Hoy" : fixed.next_pay %>
          </div>
        </div>
        <div>
          <% if fixed.next_pay == DateTime.now.to_date && !fixed.pay? %>
            <i class="fa-solid fa-circle-exclamation fs-4 text-danger"></i>
          <% elsif fixed.next_pay == DateTime.now.to_date && fixed.pay? %>
            <i class="fa-solid fa-circle-check fs-4 text-success"></i>
          <% else %>
            <i class="fa-solid fa-clock-rotate-left fs-4 text-secondary"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
