<div class="container">
  <div class="card m-5">
    <div class="card-body d-flex justify-content-between">
      <div>
        <i class="fa-solid fa-coins"></i>
        <%= @account.name %>
      </div>
      <div>
        <%= @account.balance %>
        <i class="fa-solid fa-pen" data-bs-toggle="modal" data-bs-target="#editModal"></i>
        <%= link_to account_path(@account), data: {turbo_method: :delete, turbo_confirm: "are you sure"} do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    </div>
  </div>

  <h2>Registros</h2>
</div>
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Cambiar datos de cuenta</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "edit_account", account: @account %>
      </div>
    </div>
  </div>
</div>
