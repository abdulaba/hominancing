<%= simple_form_for(account) do |f| %>
  <%= f.input :name %>
  <%= f.input :color, as: :color, input_html: {list: "options"}%>
  <datalist id="options">
    <% colors.each do |color| %>
      <option value="<%= color %>"><%= color %></option>
    <% end %>
  </datalist>
  <%= f.submit class: "button w-100" %>
<% end %>
