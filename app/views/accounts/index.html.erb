<div class="container">
  <div class="row mt-5">
    <div class="col-3">
      <h2>Nueva Cuenta</h2>
      <%= render "new_account", account: @account, colors: @colors %>
    </div>
    <div class="col-8">
      <div class="row">
        <% @accounts.each do |account| %>
          <div class="col-6 mb-3">
            <%= link_to account_path(account), class: "text-decoration-none" do %>
              <%= render "account_card", account: account %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
